# GPU Cloud Orchestrator - Environment Variables

# =============================================================================
# Brain (Control Plane) Settings
# =============================================================================

# Application
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/gpu_orchestrator

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Billing
BILLING_INTERVAL_SECONDS=60
MINIMUM_BALANCE_FOR_POD=1.0
LOW_BALANCE_WARNING_THRESHOLD=5.0
DEFAULT_MARKUP_PERCENT=25

# Provider API Keys (Phase 1: Arbitrage)
RUNPOD_API_KEY=
LAMBDA_LABS_API_KEY=
VAST_AI_API_KEY=

# =============================================================================
# Agent (Data Plane) Settings
# =============================================================================

# Brain Connection
GPU_AGENT_BRAIN_URL=http://localhost:8000
GPU_AGENT_HEARTBEAT_INTERVAL_SECONDS=30

# Provider Pricing (Phase 2: Community Cloud)
GPU_AGENT_HOURLY_PRICE=

# Paths
GPU_AGENT_CONFIG_FILE=/etc/gpu-agent/config.json
GPU_AGENT_LOG_FILE=/var/log/gpu-agent/agent.log
